{
    "compilerOptions": {
        "allowImportingTsExtensions": false,
        "baseUrl": ".",
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "paths": {
            "~/*": ["./src/*"],
            "~assets/*": ["./assets/*"]
        },
        "sourceMap": true,
        "target": "ESNext"
    },
    "extends": "./tsconfig.base.json",
    "include": [
        "eslint-plugin-import.d.ts",
        "eslint-plugin-react.d.ts",
        "eslint-plugin-react-hooks.d.ts",
        "eslint.config.mjs",
        "forge.config.ts",
        "forge.env.d.ts",
        "tailwind.config.ts",
        "vite.*.config.ts",
        "src/"
    ]
}
